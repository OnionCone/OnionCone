<h3>注文履歴一覧</h3>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
        <%= link_to admin_order_path(order) do %>
          <%= order.created_at %>
          <% end %>
        </td>
        <td><%= order.customer.full_name %></td>
        <% order.order_details.each do |order_detail| %>
        <td><%= order_detail.amount %></td>
        <% end %>
        <td><%= order.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>