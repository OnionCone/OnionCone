<%= form_with model:genre,local:true do |f| %>
  <div class="form-group">
    <%= f.label :ジャンル名 %>
    <%= f.text_field :name, class: 'form-control genre_name' %>
  </div>
  <div class="form-group">
    <%= f.submit "新規登録" class: 'btn btn-success' %>
  </div>
<% end %>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>ジャンル</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-success genre_#{genre.id}' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>