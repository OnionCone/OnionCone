<div class="container">
  <div class="row">
    <div class="col-lg-7">
    <div class="form">
      <%= form_with model:@genre,url: admin_genres_path, local:true do |f| %>
      <div class="form-group">
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name, class: 'form-control genre_name' %>
        <%= f.submit "新規登録" %>
      </div>
      <% end %>
      </div>
    </div>
  </div>

<div class="row">
  <div class="col-lg-5">
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th></th>
        <th>ジャンル</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-secondary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
</div>