<div class="container">
  <h2><%= @customer.full_name %>さんの会員ページ</h2>
    <div class="row">
    <table class='table table-hover table-inverse'>
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= @customer.full_name %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
        <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
          <td>会員ステータス</td>
          <td><% if @customer.is_deleted == true %>
              <p>退会</p>
            <% else %>
              <p>有効</p>
            <% end %>
          </td>
        </tr>
      </table>
    <div>
      <%= link_to "編集する", edit_admin_customer_path,class: 'btn btn-sm btn-success' %>
      <%= link_to "注文履歴一覧", admin_root_path,class: 'btn btn-sm btn-primary' %>
    </div>
  </div>
</div>