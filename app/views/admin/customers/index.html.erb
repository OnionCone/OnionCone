<div class="container">
  <div class="row">
    
  <table class='table table-hover table-inverse'>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
      <% @customers.each do |c| %>
        <tr>
          <td><%= c.id %></td>
          <td><%= link_to c.full_name, admin_customer_path(c.id) %></td>
          <td><%= c.email %></td>
            <% if @customer.is_deleted == true %>
              <p>退会</p>
            <% else %>
              <p>有効</p>
            <% end %>
          </td>
        </tr>
      <% end %>
  </table>
  </div>
</div>

