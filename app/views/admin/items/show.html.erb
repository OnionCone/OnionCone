<div class="containar py-5">
  <div class="card w-50 mx-auto mt-4">
    <%= @item.image_id %>
  <div class="item-body">
    <div class="row">
      <div class="col-2">
        <h3>商品詳細</h3>
        <p>商品名　<%= @item.name %></p>
        <p>商品説明　<%= @item.introduction %></p>
        <p>ジャンル<%= @item.genre_id %></p>
        <p>税込価格（税抜価格）　<%= @item.price %>円</p>
        <p>販売ステータス<%= @item.is_deleted, class: %></p>

  <%= link_to "編集する", edit_admin_item_path(@item), class: 'btn btn-sm btn-primary' %>
</div>

