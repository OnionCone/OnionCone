<h1>商品編集</h1>
<%= form_with model:@item, url:admin_item_path(@item), local:true do |f| %>
  <h4>商品画像</h4>
  <%= f.attachment_field :image %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
  <h4>ジャンル</h4>
  <%= f.select :genre_id, [ ["ケーキ",0], ["プリン", 1], ["焼き菓子", 2 ] ,["キャンディ", 3] ], prompt: "-- 選択してください --" %>
  <h4>税抜き価格</h4>
  <%= f.text_field :price %> 円
  <h4>販売ステータス</h4>
  <%= f.radio_button :is_deleted, "0" %>販売停止中 <%= f.radio_button :is_deleted, "1" %>販売中
  <%= f.submit '編集する' %>
<% end %>