<h2>新規会員登録</h2>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
    <div style="text-align:left">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>

        <div class="form-inline">
          <div class="field">
            <%= f.label :last_name, "(姓)" %>
            <%= f.text_field :last_name, autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :last_name_kana, "(セイ)" %>
            <%= f.text_field :last_name_kana, autofocus: true %>
          </div>
        </div>

        <div class="form-inline">
          <div class="field">
            <%= f.label :first_name, "(名)" %>
            <%= f.text_field :first_name, autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :first_name_kana, "(メイ)" %>
            <%= f.text_field :first_name_kana, autofocus: true %>
          </div>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)" %><br />
          <%= f.text_field :postal_code, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :address, "住所" %><br />
          <%= f.text_field :address, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :telephone_number, "電話番号(ハイフンなし)" %><br />
          <%= f.text_field :telephone_number, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード(6文字以上)" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
        </div>
      <% end %>

      <%= render "customers/shared/links" %>
      </div>
      </div>
    </div>
  </div>