<div class="container">
  <h1>マイページ</h1>
  <div class="row">
    <div class="container">
      <h4>登録情報</h4>
      <%= link_to "編集する", edit_customer_path(@customer), class: "btn btn-sm btn-success" %>
    </div>
    <div class="container">
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>氏名</th>
            <th>カナ</th>
            <th>郵便番号</th>
            <th>住所</th>
            <th>電話番号</th>
            <th>メールアドレス</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @customer.full_name %></td>
            <td><%= @customer.full_name_kana %></td>
            <td><%= @customer.postal_code %></td>
            <td><%= @customer.address %></td>
            <td><%= @customer.telephone_number %></td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="container">
      <h2>配送先</h2>
      <%= link_to ' 一覧を見る ', addresses_path,class: 'btn btn-sm btn-primary' %>
    </div>
    <div class="container">
      <h2>注文履歴</h2>
      <%= link_to '注文履歴一覧', orders_path,class: 'btn btn-sm btn-primary' %>
    </div>
  </div>
</div>