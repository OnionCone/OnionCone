<div class="container">
  <h1>会員情報編集</h1>
  <div class="row">
    <% if @customer.errors.any? %>
      <%= @customer.errors.count %>件のエラーが発生しました
      <% @customer.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
    <% end %>
    <%= form_with model: @customer, local:true do |f| %>
      <div class="field">
        <%= f.label :last_name, "(姓)" %><br />
        <%= f.text_field :last_name, autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :first_name, "(名)" %><br />
        <%= f.text_field :first_name, autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :last_name_kana, "(セイ)" %><br />
        <%= f.text_field :last_name_kana, autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :first_name_kana, "(メイ)" %><br />
        <%= f.text_field :first_name_kana, autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :postal_code, "郵便番号" %><br />
        <%= f.text_field :postal_code, autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :address, "住所" %><br />
        <%= f.text_field :address, autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :telephone_number, "電話番号" %><br />
        <%= f.text_field :telephone_number, autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="actions">
        <%= f.submit "編集内容を保存する", class: "btn btn-sm btn-success" %>
      </div>
      <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-sm btn-danger" %>
    <% end %>
  </div>
</div>