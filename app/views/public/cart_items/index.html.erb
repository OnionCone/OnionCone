<div class="container">
  <div class="row">
    <h1>ショッピングカート</h1>
    <p><%= button_to 'カートを空にする', cart_item_all_path, method: :delete, class: "btn btn-sm btn-danger"%></p>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= attachment_image_tag cart_item.item, :image, format: 'jpeg', size: "100x100" %><%= cart_item.item.name %></td>

            <td><%= cart_item.item.price %></td>
            <td><%= form_with model: cart_item, url: cart_item_path(cart_item), local: true do |f| %>
            <%= f.select :amount, [["1", 1], ["2", 2], ["3", 3], ["4", 4]] , include_blank: "" %>
            <!--<td>%= cart_item.amount %></td>-->
            <%= f.submit '変更', class: "btn btn-sm btn-success" %>
            <% end %></td>
            <td><%= cart_item.subtotal %></td>
            <% @total += cart_item.subtotal %>
            <!--# @totalの数値にcart_item.subtotalを加えたい時は、@total = @total +cart_item.subtotalと書く代わりに、@total += cart_item.subtotalと書くことができます。-->
            <td><%= link_to '削除する', cart_item_path(cart_item), method: :delete, class: "btn btn-sm btn-danger"%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to '買い物を続ける', items_path, class: "btn btn-sm btn-success" %>
        <tr>
          <th>合計金額</th>
          <%= @total %>
        </tr>
    <!--商品一覧に飛ぶ-->
    <%= link_to '情報入力に進む', items_path, class: "btn btn-sm btn-success" %>
  </div>
</div>