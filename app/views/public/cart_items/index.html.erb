<h1>ショッピングカート</h1>
<p>カートを空にする</p>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    % @cart_item.each do |cart_item| %>
      <tr>
        <td>%= attachment_image_tag(cart_item.item, :image, :fill, 10, 10, fallback: "no-image-icon.jpg") %>%= cart_item.item.name %></td>
        <td>%= cart_item.item.price %></td>
        <td>%= cart_item.amount %></td>
        <td>%= cart_item.amount %>*%= cart_item.item.price %>
        %= link_to '変更', edit_cart_item_path(cart_item), :method => :put class: "btn btn-sm btn-success" %></td>
        <td>%= link_to '削除する', cart_item_path(cart_item), method: :delete, class: "btn btn-sm btn-danger"%></td>
      </tr>
    % end %>
  </tbody>
</table>
<%= link_to '買い物を続ける', public_items_path %>
    <tr>
      <th>合計金額</th>
      <th>++++</th>
    </tr>
