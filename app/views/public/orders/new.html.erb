<h1>注文情報入力</h1>
<%= form_with model: @order, url: confirm_path, local:true do |f| %>

  <p>支払い方法</p>
  <div class="field">
    <%= f.radio_button :payment_method, :クレジットカード, checked: true %>
    <%= f.label :クレジットカード %>
    <%= f.radio_button :payment_method, :銀行振込 %>
    <%= f.label :銀行振込 %>
  </div>

  <p>お届け先</p>
  <div class="field">
    <%= f.radio_button :address_option, 0, checked: true %>
    <%= f.label :ご自身の住所 %></br>
    <%= "〒" + @customer.postal_code %>
    <%= @customer.address %></br>
    <%= @customer.full_name %></br>
    <%= f.radio_button :address_option, 1 %>
    <%= f.label :登録済住所から選択 %>
    <%= f.collection_select :address_for_order, @addresses, :id, :address_all %></br>
    <%= f.radio_button :address_option, 2 %>
    <%= f.label :新しいお届け先 %></br>
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :address %></br>
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %></br>
    <%= f.label :name, "宛名" %>
    <%= f.text_field :name %>

    <%= f.submit "確認画面へ進む" %>
  </div>
<% end %>