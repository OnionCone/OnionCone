<div class="container">
  <h1>注文情報入力</h1>
  <div class="row">
    <%= form_with model: @order, url: confirm_path, local:true do |f| %>
      <h3>支払い方法</h3>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item"><%= f.radio_button :payment_method, :クレジットカード, checked: true %></li>
        <li class="nav-item"><%= f.label :クレジットカード %></li></br>
        <li class="nav-item"><%= f.radio_button :payment_method, :銀行振込 %></li>
        <li class="nav-item"><%= f.label :銀行振込 %></li>
      </ul>
      <h3>お届け先</h3>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item"><%= f.radio_button :address_option, 0, checked: true %></li>
        <li class="nav-item"><%= f.label :ご自身の住所 %></li></br>
        <li class="nav-item"><%= "〒" + @customer.postal_code %></li>
        <li class="nav-item"><%= @customer.address %></li></br>
        <li class="nav-item"><%= @customer.full_name %></li></br>
        <li class="nav-item"><%= f.radio_button :address_option, 1 %></li>
        <li class="nav-item"><%= f.label :登録済住所から選択 %></li>
        <li class="nav-item"><%= f.collection_select :address_for_order, @addresses, :id, :address_all %></li></br>
        <li class="nav-item"><%= f.radio_button :address_option, 2%></li>
        <li class="nav-item"><%= f.label :新しいお届け先 %></li></br>
        <li class="nav-item"><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></li>
        <li class="nav-item"><%= f.text_field :postal_code %></li></br>
        <li class="nav-item"><%= f.label :address, "住所" %></li>
        <li class="nav-item"><%= f.text_field :address, :size => "60*60" %></li></br>
        <li class="nav-item"><%= f.label :name, "宛名" %></li>
        <li class="nav-item"><%= f.text_field :name %></li></br>
        <li class="nav-item"><%= f.submit "確認画面へ進む",class: 'btn btn-sm btn-primary' %>
      </ul>
    <% end %>
  </div>
</div>