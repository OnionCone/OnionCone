<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <td><h1>注文履歴詳細</h1></td>
    </tr>
  </thead>
  </table>
  <thead>
    <tr>
      <h1>注文情報</h1>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th></th>
    </tr>
  </thead>
  <% @order.each do |order| %>
  <tr>
    <td><%= order.created_at %></td>
    <td><%= order.address %></td>
    <td><%= order.payment_method %></td>
    <td><%= order.status %></td>
  </tr>
<% end %>

  <thead>
    <tr>
      <h1>請求情報</h1>
      <th>商品合計</th>
      <th>配送料</th>
      <th>ご請求額</th>
    </tr>
  </thead>
  <% @order.each do |order| %>
  <tr>
    <td><%= order.order_detail.price %>（税抜合計）</td>
        <!--よくわからん-->
    <td><%= order.shipping_cost %></td>
    <td><%= order.total_payment %></td>
  </tr>
<% end %>

  <thead>
    <tr>
      <h1>注文内容</h1>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <% @order.each do |order| %>
  <tr>
    <td><%= order.order_detail.name %></td>
    <!--よくわからん-->
    <td><%= order.order_detail.price %></td>
    <td><%= order.order_detail.amount %></td>
    <td><%= order.order_detail.price %>*<%= order.order_detail.amount %></td>
  </tr>
<% end %>