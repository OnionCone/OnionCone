<div class="container">
  <div class="row">
    <h1>商品一覧</h1>
    <p>(全<%= @item.count %>件)</p>
    <div class="list-wrap">
      <% @items.each do |item| %>
      <div class="list-box">
        <%= link_to item_path(item) do %>
        <%= attachment_image_tag item, :image, format: 'jpeg', size: "200x200" %>
        <% end %>
        <div class="list-comment">
          <p><%= item.name %></p>
          <p><%= number_to_currency(item.price) %></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <%= paginate @items %>
<!--config/locales/kaminari_ja.yml-->
</div>
