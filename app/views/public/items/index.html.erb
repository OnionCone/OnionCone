<div class="container">
  <div class="row">
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <td><h1>商品一覧</h1></td>
          <td><p>(全<%= @item.count %>件)</p></td>
        </tr>
      </thead>
    </table>

    <div class="list-wrap">
      <% @items.each do |item| %>
      <div class="list-box">
        <%= link_to public_item_path(item) do %>
        <%= attachment_image_tag item, :image, format: 'jpeg', size: "100x100" %>
        <% end %>
        <div class="list-comment">
          <p><%= item.name %></p>
          <p><%= item.price %>円</p>
        </div>
      </div>
      <% end %>
    </div>

  </div>
  <%= paginate @items %>
<!--config/locales/kaminari_ja.yml-->
</div>
