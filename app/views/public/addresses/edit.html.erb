<div class="container">
  <div class="row">
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <td><h1>配送先編集</h1></td>
        </tr>
      </thead>
    </table>
    <%= form_with model: @addresses,:url => {:action => :update}, local:true do |f| %>
      <div class="field">
        <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
        <%= f.text_field :postal_code %>
      </div>

      <div class="field">
        <%= f.label :address, "住所" %>
        <%= f.text_field :address %>
      </div>

      <div class="field">
        <%= f.label :name, "宛名" %>
        <%= f.text_field :name %>
        <%= f.submit "変更内容を保存", class: "btn btn-sm btn-success" %>
      </div>
    <% end %>
  </div>
</div>