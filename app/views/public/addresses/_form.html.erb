<%= form_with model: address, local:true do |f| %>
  <div class="field">
    <%= f.label :postal_code, "郵便番号（ハイフンなし）" %><br />
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :name, "宛名" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>